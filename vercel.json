{
    "version": 2,
    "builds": [
      {
        "src": "./client", 
        "use": "react-scripts build"
      },
      {
        "src": "./server/index.js",
        "use": "@vercel/node"
      }
    ],
  
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server/index.js"
      }
    ]
  }